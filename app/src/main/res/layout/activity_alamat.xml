                    android:id="@+id/imageView4"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"

                    app:srcCompat="@drawable/mail" />

                <TextView
                    android:id="@+id/txt_mail"
                    android:layout_width="match_parent"
